- data  = current_page.data
- parts = [data.taken || data.shot.strftime('%B %Y'), data.place]
- parts << "by #{data.photographer}" if data.photographer
- desc = parts.join(', ')
- content_for(:og_description) { desc }
- content_for(:og_image) { current_page.url + 'sample.png' }
- content_for(:body_class) { 'darkbox' }
= wrap_layout :layout do
  - if previous = current_page.previous_article
    a href=previous.url title="previously: #{previous.title} â†£"
      = partial :image
  - else
    = partial :image
  .main.content.shoot
    article lang='en'
      p.date = desc
      h1
        a href='' = current_page.title
      = current_page.body
